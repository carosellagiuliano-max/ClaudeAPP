# Supabase
# For local development: Get these from `npx supabase start` output
# For staging/production: Get from Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Stripe (Payment Processing)
# Use test keys for dev/staging, live keys for production only
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Email Provider (Resend or similar)
RESEND_API_KEY=re_...

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Monitoring & Error Tracking (Optional for development)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_LOYALTY=true
NEXT_PUBLIC_ENABLE_SHOP=true
NEXT_PUBLIC_ENABLE_WAITLIST=false

# Logging
LOG_LEVEL=debug
