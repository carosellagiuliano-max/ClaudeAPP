# SCHNITTWERK Environment Variables
# Copy this file to .env.local for local development

# ============================================================================
# SUPABASE
# ============================================================================

# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================================================
# STRIPE
# ============================================================================

# Get these from: https://dashboard.stripe.com/apikeys
# Test keys (development)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx

# Live keys (production only - DO NOT COMMIT)
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
# STRIPE_SECRET_KEY=sk_live_xxxxx

# Webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ============================================================================
# EMAIL (RESEND)
# ============================================================================

# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxx

# ============================================================================
# SMS (TWILIO)
# ============================================================================

# Get from: https://console.twilio.com/
# Account SID and Auth Token
TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=xxxxx

# Your Twilio phone number (E.164 format)
# Example: +41791234567
TWILIO_PHONE_NUMBER=+41xxxxxxxxx

# ============================================================================
# CRON JOBS
# ============================================================================

# Generate with: openssl rand -base64 32
CRON_SECRET=your-random-secret-here

# ============================================================================
# ERROR TRACKING (OPTIONAL)
# ============================================================================

# Sentry DSN from: https://sentry.io/settings/projects/
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ============================================================================
# APP CONFIGURATION
# ============================================================================

NODE_ENV=development
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================================
# NOTES
# ============================================================================

# 1. Never commit .env.local to git
# 2. Use different Stripe keys for dev/staging/production
# 3. Rotate secrets quarterly for security
# 4. Set production env vars in Vercel Dashboard
# 5. Test all integrations before going live
